@model List<Author>
<a href="/author/add" class="btn btn-success">Add Author</a>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">Gender</th>
      <th scope="col">Email</th>
      <th scope="col">Date of Birth</th>
    </tr>
  </thead>
  <tbody>
  @foreach(var author in Model)
  {
    <tr>
      <th scope="row">@author.Id</th>
      <td>@author.Name</td>
      <td>@author.Address</td>
      <td>@author.Gender</td>
      <td>@author.Email</td>
      <td>@author.Dob.ToLongDateString()</td>
    </tr>
  }    
  </tbody>
</table>