@model Author

<h1>Welcome, @ViewBag.Username!</h1>
<h2 class="text-center">New Author Registration</h2>
<form action="/author/add" method="post">
  <div class="mb-3">
    <label class="form-label">Name</label>
    <input asp-for="Name" type="text" class="form-control">
  </div>
  <div class="mb-3">
    <label class="form-label">Address</label>
    <input asp-for="Address" type="text" class="form-control">
  </div>
  <div class="mb-3">
    <label class="form-label">Email</label>
    <input asp-for="Email" type="email" class="form-control">
  </div>
  <div class="mb-3">
    <label class="form-label">Gender</label>
    <select class="form-select" asp-for="Gender">
      <option value="0" selected>Select Gender</option>
      @foreach(var g in Enum.GetValues<Gender>())
      {
        <option value="@g">@g</option>
      }
    </select>
  </div>
  <div class="mb-3">
    <label class="form-label">DOB</label>
    <input asp-for="Dob" type="date" class="form-control">
  </div>

  <button type="submit" class="btn btn-primary">Save Author</button>
</form>