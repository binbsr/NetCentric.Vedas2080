@model Author

<h2 class="text-danger">Are you sure to delete data for @Model.Name?</h2>
<form action="/author/delete" method="post">
  <input type="hidden" asp-for="Id" />
  <button type="submit" class="btn btn-danger">Delete</button>
  <a href="/author/index" class="btn btn-success">Cancel</a>
</form>